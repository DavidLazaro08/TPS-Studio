<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tpsstudio.view.EditorViewController"
            prefHeight="700.0" prefWidth="1100.0" styleClass="root">
    
    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="topbar">
            <Label text="TPS Studio - Editor CR80" styleClass="title" />
            <Button text="Cerrar" onAction="#onClose" styleClass="primary-btn">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </top>
    
    <!-- Área central: Canvas CR80 -->
    <center>
        <StackPane styleClass="canvas-area">
            <!-- Canvas para dibujar tarjeta y guías -->
            <Canvas fx:id="canvas" width="800" height="600" />
        </StackPane>
    </center>
    
</BorderPane>
