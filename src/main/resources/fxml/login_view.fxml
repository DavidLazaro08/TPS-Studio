<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.tpsstudio.view.controllers.LoginViewController"
           prefHeight="500.0" prefWidth="600.0" styleClass="root" alignment="CENTER">

    <!-- Card Exterior (panel oscuro con sombra) - PRIMERA CAJA -->
    <StackPane alignment="CENTER" styleClass="login-outer"
               maxWidth="460.0" maxHeight="560.0">

        <!-- Card Interior (panel más claro con contenido) - SEGUNDA CAJA -->
        <VBox fx:id="loginCard" alignment="CENTER" spacing="15.0" styleClass="login-inner"
              maxWidth="424.0">

            <!-- Título -->
            <Label text="TPS Studio" styleClass="login-title" />
            <Label text="Acceso al sistema" styleClass="login-subtitle">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin>
            </Label>

            <!-- Campo Usuario -->
            <VBox spacing="6.0" maxWidth="320.0">
                <Label text="Usuario" styleClass="field-label" />
                <TextField fx:id="txtUser" promptText="Introduce tu usuario"
                           styleClass="form-field" onAction="#onLogin"
                           maxWidth="320.0" prefWidth="320.0" />
            </VBox>

            <!-- Campo Contraseña con botón ojo -->
            <VBox spacing="6.0" maxWidth="320.0">
                <Label text="Contraseña" styleClass="field-label" />
                <StackPane maxWidth="320.0">

                    <!-- PasswordField (oculto por defecto) -->
                    <PasswordField fx:id="txtPass" promptText="Introduce tu contraseña"
                                   styleClass="form-field" onAction="#onLogin"
                                   maxWidth="320.0" prefWidth="320.0" />

                    <!-- TextField (visible cuando se muestra) -->
                    <TextField fx:id="txtPassVisible" promptText="Introduce tu contraseña"
                               styleClass="form-field" visible="false" managed="false"
                               onAction="#onLogin" maxWidth="320.0" prefWidth="320.0" />

                    <!-- Botón ojo para mostrar/ocultar -->
                    <HBox alignment="CENTER_RIGHT" pickOnBounds="false">
                        <Button fx:id="btnTogglePassword" onAction="#onTogglePasswordVisibility"
                                styleClass="eye-button">
                            <graphic>
                                <SVGPath fx:id="eyeIcon" styleClass="eye-icon"
                                         content="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
                            </graphic>
                        </Button>
                    </HBox>
                </StackPane>
            </VBox>

            <!-- Checkbox Recordarme -->
            <CheckBox fx:id="chkRememberMe" text="Recordar usuario" styleClass="remember-checkbox">
                <VBox.margin>
                    <Insets top="2.0" />
                </VBox.margin>
            </CheckBox>

            <!-- Label de error -->
            <Label fx:id="lblError" wrapText="true" styleClass="error-text"
                   minHeight="18.0" maxWidth="320.0" />

            <!-- Botón Entrar -->
            <Button text="Entrar" onAction="#onLogin"
                    styleClass="success-btn" defaultButton="true"
                    maxWidth="320.0" prefWidth="320.0">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Button>

            <!-- Enlace "Solicitar acceso" -->
            <Hyperlink fx:id="linkCreateAccount" text="Solicitar acceso"
                       onAction="#onRequestAccess" styleClass="link-text">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Hyperlink>

        </VBox>

    </StackPane>

</StackPane>
