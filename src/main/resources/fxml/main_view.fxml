<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tpsstudio.view.MainViewController"
            prefWidth="1100" prefHeight="700" styleClass="root">

    <top>
        <HBox alignment="CENTER_LEFT" styleClass="topbar">
            <Label text="TPS Studio" styleClass="title" />
            <Button text="Abrir Editor CR80" onAction="#onOpenEditor" styleClass="primary-btn" />
        </HBox>
    </top>

    <center>
        <StackPane styleClass="content-bg">
            <Label fx:id="lblStatus" styleClass="status-label" />
        </StackPane>
    </center>

</BorderPane>
